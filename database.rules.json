{
  "rules": {
    "sessions": {
      "global-canvas-v1": {
        ".read": "auth != null",
        "$uid": {
          ".write": "auth != null && auth.uid == $uid",
          ".validate": "newData.hasChildren(['userId', 'displayName', 'cursorX', 'cursorY', 'isOnline']) && newData.child('userId').val() == $uid"
        }
      }
    }
  }
}
